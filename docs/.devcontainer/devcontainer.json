{
    "name": "MkDocs Material editor",
    "build": {
        "context": "..",
        "dockerfile": "Dockerfile"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/docs,type=bind",
    "workspaceFolder": "/docs",
    "customizations": {
        "vscode": {
            "extensions": [
                "davidanson.vscode-markdownlint"
            ]
        }
    },
    "forwardPorts": [
        8000
    ]
}